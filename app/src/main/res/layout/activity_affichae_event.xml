<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Event">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".view.Event">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginRight="220dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/exit"

                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_1">

            </ImageButton>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/modifier"

                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_1">

            </ImageButton>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:id="@+id/supprimer"

                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_1">

            </ImageButton>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_couleur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <Button
                android:id="@+id/couleur_button"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/enregistrer">


            </Button>

            <TextView
                android:id="@+id/titre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:hint="Ajouter un titre"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_3" />

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Toute la journÃ©e"
                android:id="@+id/notification"
                android:layout_gravity="center_vertical"></TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_description"
            android:layout_height="50dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/text_img"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_earth"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:textSize="14sp"
                android:inputType=""
                android:layout_gravity="center_vertical"
                android:text="Ajouter une description" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>