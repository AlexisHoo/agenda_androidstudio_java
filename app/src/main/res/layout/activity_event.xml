<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Event">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".view.Event">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginRight="199dp"
                android:layout_weight="1"

                android:adjustViewBounds="true"
                android:id="@+id/exit"

                android:background="@color/white"
                android:scaleType="center"
                android:src="@drawable/exit">

            </ImageButton>

            <Button
                android:id="@+id/enregistrer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1.8"
                android:backgroundTint="@color/enregistrer"
                android:text="Enregistrer"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="@+id/exit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


            </Button>


        </LinearLayout>


        <EditText
            android:id="@+id/titre"
            android:layout_width="158dp"
            android:layout_height="67dp"
            android:layout_marginStart="70dp"
            android:hint="Ajouter un titre"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/myImageView"
                android:layout_width="50dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/img_3" />

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Toute la journÃ©e"></TextView>


            <CheckBox
                android:id="@+id/myCheckBox"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_heure"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/earth_img"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/earth" />

            <TextView
                android:id="@+id/txt_heure"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Heure normale d'Europe Centrale"
                android:layout_gravity="center_vertical"></TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_constance"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/arrow_img"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/redo"/>

            <TextView
                android:id="@+id/txt_constance"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Une seule fois"
                android:layout_gravity="center_vertical"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_ajout_event"
            android:text=" ezefzefzefzefz"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_notification"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/bell_img"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notifications"
                 />

            <TextView
                android:id="@+id/txt_notification"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Ajouter une notification"
                android:layout_gravity="center_vertical"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_ajout_event"
            android:text=" ezefzefzefzefz"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_couleur"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <Button
                android:id="@+id/couleur_button"
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/enregistrer">


            </Button>



            <TextView
                android:id="@+id/txt_couleur"
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:text="Couleur"
                android:layout_gravity="center_vertical"></TextView>

        </LinearLayout>

        <TextView
            android:layout_width="350dp"
            android:layout_height="1.5dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_ajout_event"
            android:text=" ezefzefzefzefz"></TextView>

        <LinearLayout
            android:id="@+id/layout_description"
            android:layout_width="381dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titre"
            tools:context=".view.Event">

            <ImageView
                android:id="@+id/text_img"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:scaleType="center"
                android:src="@drawable/description" />

            <EditText
                android:id="@+id/description"
                android:layout_width="333dp"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Ajouter un titre"
                android:inputType=""
                android:textSize="14sp" />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>